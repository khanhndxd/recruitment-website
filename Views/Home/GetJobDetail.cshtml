@model DoanWebsiteTuyenDung.Models.Job
@{
    Layout = "_JobDetailLayout.cshtml";
}
<section class="site-section">
    <div class="container">
        <section class="site-section">
            <div class="container">
                <div class="row align-items-center mb-5">
                    <div class="col-lg-8 mb-4 mb-lg-0">
                        <div class="d-flex align-items-center">
                            <div class="border p-2 d-inline-block mr-3 rounded" style="width:100px; height:100px">
                                <img src=@Model.EIdNavigation.EImage alt="company-logo" width="100%" height="100%">
                            </div>
                            <div>
                                <h2>@Model.JTitle</h2>
                                <div>
                                    <span class="ml-0 mr-2 mb-2"><span class="icon-briefcase mr-2"></span>@Model.EIdNavigation.EName</span>
                                    <span class="m-2"><span class="icon-room mr-2"></span>@Model.JLocation</span>
                                    <span class="m-2"><span class="icon-clock-o mr-2">

                                    </span>
                                        <span class="text-primary">
                                            @if (@Model.JType == "P")
                                            {
                                                <span class="badge badge-success" style="background-color:#1E90FF">
                                                    Part time
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-success" style="background-color:#1E90FF">
                                                    Full time
                                                </span>
                                            }
                                         </span>
                                     </span>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-6">
                                <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-heart-o mr-2 text-danger"></span>Lưu công việc</a>
                            </div>
                            <div class="col-6">
                                <a href="#" class="btn btn-block btn-primary btn-md">Apply ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="mb-5">
                            <figure class="mb-5"><img src="/assets/images/job_single_img_1.jpg" alt="Image" class="img-fluid rounded"></figure>
                            <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-align-left mr-3"></span>Mô tả công việc</h3>
                            @Html.Raw(Model.JDescription)
                        </div>
                        <div class="mb-5">
                            <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-rocket mr-3"></span>Yêu cầu</h3>
                            @Html.Raw(Model.JRequiredSkills)
                        </div>
                        <div class="row mb-5">
                            <div class="col-6">
                                <a href="#" class="btn btn-block btn-light btn-md"><span class="icon-heart-o mr-2 text-danger"></span>Lưu công việc</a>
                            </div>
                            <div class="col-6">
                                <a href="#" class="btn btn-block btn-primary btn-md">Apply ngay</a>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4">
                        <div class="bg-light p-3 border rounded mb-4">
                            <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Tóm tắt công việc</h3>
                            <ul class="list-unstyled pl-3 mb-0">
                                <li class="mb-2"><strong class="text-black">Ngày đăng tin:</strong> @Model.JPostDate</li>
                                <li class="mb-2">
                                    <strong class="text-black">Loại công việc:</strong> @if (@Model.JType == "P")
                                    {
                                        <span class="badge badge-success" style="background-color:#1E90FF">
                                            Part time
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success" style="background-color:#1E90FF">
                                            Full time
                                        </span>
                                    }
                                </li>
                                <li class="mb-2"><strong class="text-black">Địa chỉ:</strong> @Model.JLocation</li>
                                <li class="mb-2"><strong class="text-black">Lương:</strong> @ViewData["FormattedSalary"]</li>
                                <li class="mb-2"><strong class="text-black">Giới tính:</strong> Tất cả</li>
                                <li class="mb-2"><strong class="text-black">Ngày hết hạn tin:</strong> @Model.JExpirationDate</li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
