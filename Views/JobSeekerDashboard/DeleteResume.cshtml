@model DoanWebsiteTuyenDung.Models.Resume
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    string userid = HttpContextAccessor.HttpContext.Session.GetString("userId");
}
@{
    Layout = "_BlankLayout.cshtml";
}
<form class="custom-model" asp-controller="JobSeekerDashboard" asp-action="DeleteResume" asp-route-userid="@userid" asp-route-jobId="@Model.RId" method="post">
    <h3 class="text-white border-bottom pb-2">Xác nhận xóa hồ sơ</h3>
    <p class="text-white mb-5 pb-2">Tên hồ sơ: @Model.RName</p>
    <div class="custom-model-button-container">
        <button asp-controller="JobSeekerDashboard" asp-action="Resumes" asp-route-userid="@userid" class="btn btn-primary ml-auto mr-2">Hủy</button>
        <button type="submit" class="btn btn-primary">Xác nhận</button>
    </div>
</form>