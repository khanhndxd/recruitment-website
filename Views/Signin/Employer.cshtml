@model DoanWebsiteTuyenDung.Models.Employer;
@{
    ViewData["Title"] = "Đăng nhập - Nhà tuyển dụng";
}
<title>@ViewData["Title"]</title>
<section class="section-hero overlay inner-page bg-image" style="background-image: url('../assets/images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Đăng nhập - Nhà tuyển dụng</h1>
                <div class="custom-breadcrumbs">
                    <a href="#">Trang chủ</a> <span class="mx-2 slash">/</span>
                    <a href="#">Nhà tuyển dụng </a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Đăng nhập</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section" style="padding-top:3rem; padding-bottom:3rem">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-5">
                <form asp-action="Employer" class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EEmail" class="text-black">Email</label>
                        <input type="email" asp-for="EEmail" class="form-control" placeholder="Địa chỉ email" />
                        <span asp-validation-for="EEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EPassword" class="text-black">Mật khẩu</label>
                        <input type="password" asp-for="EPassword" class="form-control" placeholder="Mật khẩu" />
                        <span asp-validation-for="EPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Đăng nhập" class="btn px-4 btn-primary text-white" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>