@model DoanWebsiteTuyenDung.Models.JobSeeker;
@{
    ViewData["Title"] = "Đăng ký - Người tìm việc";
}
<title>@ViewData["Title"]</title>
<section class="section-hero inner-page pt-0" id="home-section" style="background-color:#F0F8FF">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-black font-weight-bold">Đăng ký - Người tìm việc</h1>
            </div>
        </div>
    </div>
</section>

<section class="site-section" style="padding-top:3rem; padding-bottom:3rem">
    <div class="container">
        <div class="row" style="align-items:center; justify-content:center;">
            <div class="col-lg-6 mb-5">
                <form asp-action="JobSeeker" class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="JsName" class="control-label">Họ tên</label>
                        <input asp-for="JsName" class="form-control" placeholder="Họ tên đầy đủ" />
                        <span asp-validation-for="JsName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JsEmail" class="control-label">Email</label>
                        <input type="email" asp-for="JsEmail" class="form-control" placeholder="Địa chỉ email" />
                        <span asp-validation-for="JsEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JsPassword" class="control-label">Mật khẩu</label>
                        <input type="password" asp-for="JsPassword" class="form-control" placeholder="Mật khẩu" />
                        <span asp-validation-for="JsPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="EPassword" class="text-black">Nhập lại mật khẩu</label>
                        <input type="password" name="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" />
                    </div>
                    <div class="form-group">
                        <input id="my-btn" type="submit" value="Đăng ký" class="btn px-4 btn-primary text-white" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>