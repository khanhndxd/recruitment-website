@model DoanWebsiteTuyenDung.Models.Employer
@{
    ViewData["Title"] = "Đăng ký - Nhà tuyển dụng";
}
<title>@ViewData["Title"]</title>
<section class="section-hero inner-page" id="home-section" style="background-color:#F0F8FF">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-black font-weight-bold">Đăng ký - Nhà tuyển dụng</h1>
            </div>
        </div>
    </div>
</section>

<section class="site-section" style="padding-top:3rem; padding-bottom:3rem">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-5">
                <form asp-action="Employer" class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="EName" class="control-label">Tên nhà tuyển dụng</label>
                            <input asp-for="EName" class="form-control" placeholder="Tên nhà tuyển dụng" />
                            <span asp-validation-for="EName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EEmail" class="control-label">Email</label>
                            <input asp-for="EEmail" class="form-control" placeholder="Email" />
                            <span asp-validation-for="EEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EPassword" class="control-label">Mật khẩu</label>
                            <input asp-for="EPassword" type="password" class="form-control" placeholder="Mật khẩu" />
                            <span asp-validation-for="EPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="EPassword" class="text-black">Nhập lại mật khẩu</label>
                            <input type="password" name="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" />
                        </div>
                        <div class="form-group">
                            <input id="my-btn" type="submit" value="Đăng ký" class="btn px-4 btn-primary text-white" />
                        </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}