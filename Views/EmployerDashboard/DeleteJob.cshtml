@model DoanWebsiteTuyenDung.Models.Job
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    string userid = HttpContextAccessor.HttpContext.Session.GetString("userId");
}
@{
    Layout = "_BlankLayout.cshtml";
}
<form class="custom-model" asp-controller="EmployerDashboard" asp-action="DeleteJob" asp-route-userid="@userid" asp-route-jobId="@Model.JId" method="post">
    <h3 class="text-white border-bottom pb-2">Xác nhận xóa công việc</h3>
    <p class="text-white mb-5 pb-2">Tiêu đề: @Model.JTitle</p>
    <div class="custom-model-button-container">
        <button asp-controller="EmployerDashboard" asp-action="Jobs" asp-route-userid="@userid" class="btn btn-primary ml-auto mr-2">Hủy</button>
        <button type="submit" class="btn btn-primary">Xác nhận</button>
    </div>
</form>