@model DoanWebsiteTuyenDung.Models.Employer
@{
    Layout = "_DashboardLayout.cshtml";
}
<section>
    <div id="dashboard-content-main-inner">
        <div class="card">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-7">
                        <div class="d-md-flex align-items-center">
                            <div class="text-center text-sm-left ">
                                <div class="avatar avatar-image" style="width: 150px; height:150px">
                                    <img src=@(Model.EImage != null ? Model.EImage : "") alt="avatar">
                                </div>
                            </div>
                            <div class="text-center text-sm-left m-v-15 p-l-30">
                                <h2 class="m-b-5">@Model.EName</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="row">
                            <div class="d-md-block d-none border-left col-1"></div>
                            <div class="col">
                                <ul class="list-unstyled m-t-10">
                                    <li class="row">
                                        <p class="col-sm-4 col-4 font-weight-semibold text-dark m-b-5">
                                            <i class="m-r-10 text-primary anticon anticon-mail"></i>
                                            <span>Email: </span>
                                        </p>
                                        <p class="col font-weight-semibold"> @Model.EEmail</p>
                                    </li>
                                    <li class="row">
                                        <p class="col-sm-4 col-4 font-weight-semibold text-dark m-b-5">
                                            <i class="m-r-10 text-primary anticon anticon-phone"></i>
                                            <span>Liên lạc: </span>
                                        </p>
                                        <p class="col font-weight-semibold">
                                            @(Model.EPhone != null ? Model.EPhone : "Chưa cập nhật")
                                        </p>
                                    </li>
                                    <li class="row">
                                        <p class="col-sm-4 col-5 font-weight-semibold text-dark m-b-5">
                                            <i class="m-r-10 text-primary anticon anticon-compass"></i>
                                            <span>Địa chỉ: </span>
                                        </p>
                                        <p class="col font-weight-semibold"> @(Model.EAddress != null ? @Model.EAddress : "Chưa cập nhật")</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5>Giới thiệu</h5>
                        <p>@Html.Raw(Model.EAbout)</p>
                        <hr>
                    </div>
                </div>
            </div>
    </div>
    <script src="~/assets/js/bootstrap.min.js"></script>
</section>
